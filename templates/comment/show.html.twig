{% extends 'base.html.twig' %}

{% block title %}Подобнее о комментарии{% endblock %}

{% block body %}
    <section class="comm">
        <h1>Комментарий</h1>

        <table class="table text-white">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ comment.author }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('comment_index') }}">Назад к списку</a>

        <a class="btn btn-warning" href="{{ path('comment_edit', {'id': comment.id}) }}">Изменить</a>

        {{ include('comment/_delete_form.html.twig') }}
    </section>
{% endblock %}
