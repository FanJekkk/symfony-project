{% extends 'base.html.twig' %}

{% block title %}Рейс{% endblock %}

{% block body %}
    <h1>Рейс</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flight.id }}</td>
            </tr>
            <tr>
                <th>Из города</th>
                <td>{{ flight.cityfrom }}</td>
            </tr>
            <tr>
                <th>В город</th>
                <td>{{ flight.cityto }}</td>
            </tr>
            <tr>
                <th>Цена</th>
                <td>{{ flight.price }}</td>
            </tr>
            <tr>
                <th>Дата</th>
                <td>{{ flight.date ? flight.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('flight_index') }}">Вернуться к расписанию рейсов</a>

    <a href="{{ path('flight_edit', {'id': flight.id}) }}">Изменить</a>

    {{ include('flight/_delete_form.html.twig') }}
{% endblock %}
